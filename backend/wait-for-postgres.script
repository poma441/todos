#!/bin/bash
set -e

host="$1"
shift
user="$1"
shift
password="$1"
shift
migrate_cmd="$1"
shift
start_api_cmd="$1"

until PGPASSWORD="$password" psql -h "$host" -U "$user" -c '\q'; do
  >&2 echo "Postgres is unavailable - sleeping"
  sleep 1
done

>&2 echo "Postgres is up - executing command"
$migrate_cmd && $start_api_cmd